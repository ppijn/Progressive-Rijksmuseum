<section id="home">
  <header>
    <img src="img/rijksmuseum.png" alt="rijksmuseum logo" class="logo" />
    <form method="get" action="/search">
      <input
        id="search-input"
        type="search"
        placeholder="Zoek naar uw kunst..."
        name="q"
      />
      <button type="submit" class="search-button" name="search-button">
        <img src="img/search.svg" alt="search icon" class="search-icon" />
      </button>
      <button class="open-filter" name="open-filter">
        <i class="fa fa-filter filter-icon"></i>
      </button>
    </form>
  </header>
  <div class="error"></div>
  <form id="filter" class="hidden">
    <button class="jaar-button" name="jaar">jaar</button>
    <div class="jaar-open hidden">
      <input
        class="jaar-open-style"
        id="jaarmin"
        type="number"
        name="jaarmin"
        min="1000"
        max="2021"
        step="20"
        placeholder="1000"
      />
      <h1 class="dash">-</h1>
      <input
        class="jaar-open-style"
        id="jaarmax"
        type="number"
        name="jaarmax"
        min="1000"
        max="2021"
        step="20"
        placeholder="2021"
      />
    </div>

    <input
      class="filter"
      id="artiest"
      type="text"
      placeholder="artiest"
    />
    <input class="filter" id="type" type="text" placeholder="type" />
    <button class="apply filter" name="apply-filter">
      <i class="fa fa-arrow-down arrow-down"></i>
    </button>
  </form>
</section>
<section id="art-list">

  <br>
 
  <ul class="data-list">
   
    <% data.forEach((artObject)=> { %>
      <pre><code><% JSON.stringify(data, null, 2) %></code></pre>
      <li class="<% artObject.id %>">
        <a href="#information">
          <img class="art" src="<%=
            artObject.webImage.url.slice(0, -3) + "=s1000"
          %>" alt="<%= artObject.title %>"/>
          <span><h3><%= artObject.principalOrFirstMaker %></h3></span>
          <h1><%= artObject.title %></h1>
        </a>
      </li>
      <% }) %>

  </ul>

  <div class="next-page">
    <button class="page left" name="page-left"><i class="fa fa-angle-left"></i></button>
    <h1 class="page page-number"><%= data.length %></h1>
    <button class="page right" name="page-right"><i class="fa fa-angle-right"></i></button>
  </div>
</section>